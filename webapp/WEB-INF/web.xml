<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>restweb</display-name>

    <filter>
        <filter-name>session</filter-name>
        <filter-class>com.anpilogoff.controller.filters.SessionFilter</filter-class>
    </filter>
    <filter>
        <filter-name>auth</filter-name>
        <filter-class>com.anpilogoff.controller.filters.AuthFilter</filter-class>
    </filter>
    <filter>
        <filter-name>credential</filter-name>
        <filter-class>com.anpilogoff.controller.filters.CredentialFilter</filter-class>
    </filter>


    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.anpilogoff.controller.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.anpilogoff.controller.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>com.anpilogoff.controller.servlets.RegistrationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>


    <filter-mapping>
        <filter-name>session</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>auth</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>credential</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>