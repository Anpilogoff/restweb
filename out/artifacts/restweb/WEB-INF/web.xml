<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
    <display-name>restweb</display-name>


<filter>
    <filter-name>uploadFilter</filter-name>
    <filter-class>com.anpilogoff.controller.filters.UploadFilter</filter-class>
</filter>

    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>com.anpilogoff.controller.filters.LoginFilter</filter-class>
    </filter>

    <filter>
        <filter-name>homeFilter</filter-name>
        <filter-class>com.anpilogoff.controller.filters.HomeFilter</filter-class>
    </filter>

    <filter>
        <filter-name>registerFiler</filter-name>
        <filter-class>com.anpilogoff.controller.filters.RegisterFilter</filter-class>
    </filter>


    <filter>
        <filter-name>resourceFilter</filter-name>
        <filter-class>com.anpilogoff.controller.filters.ResourceFilter</filter-class>
    </filter>


    <servlet>
        <servlet-name>musicUploadServlet</servlet-name>
        <servlet-class>com.anpilogoff.controller.servlets.MusicUploadServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>com.anpilogoff.controller.servlets.RegistrationServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>registerprofile</servlet-name>
        <servlet-class>com.anpilogoff.controller.servlets.ProfileRegistrationServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.anpilogoff.controller.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>userhomeServlet</servlet-name>
        <servlet-class>com.anpilogoff.controller.servlets.UserHomeServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>uploadservlet</servlet-name>
        <servlet-class>com.anpilogoff.controller.servlets.UploadServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>com.anpilogoff.controller.servlets.HomeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.anpilogoff.controller.servlets.LogoutServlet</servlet-class>
    </servlet>


<filter-mapping>
    <filter-name>uploadFilter</filter-name>
    <url-pattern>/uploadServlet</url-pattern>
</filter-mapping>

    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/login</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>homeFilter</filter-name>
        <url-pattern>/home</url-pattern>
        <url-pattern>/userhome</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>registerFiler</filter-name>
        <url-pattern>/registration</url-pattern>
        <url-pattern>/registerprofile</url-pattern>
    </filter-mapping>


    <filter-mapping>
        <filter-name>resourceFilter</filter-name>
        <url-pattern>/resources/*</url-pattern>
        <url-pattern>/dynamic/images/avatars</url-pattern>
        <url-pattern>/dynamic/sounds/system/*</url-pattern>
    </filter-mapping>








    <servlet-mapping>
        <servlet-name>musicUploadServlet</servlet-name>
        <url-pattern>/musicUpload</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>userhomeServlet</servlet-name>
        <url-pattern>/userhome</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>registerprofile</servlet-name>
        <url-pattern>/registerprofile</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>uploadservlet</servlet-name>
        <url-pattern>/uploadservlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/MyLocalDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <listener>
        <listener-class>com.anpilogoff.controller.listeners.ActiveSessionListener</listener-class>
    </listener>

</web-app>